<%= form_tag admin_monthly_logs_path, method: :get do %>
  <%= select_tag 'q[date_month_eq]', options_for_select(Date::MONTHNAMES.compact.each_with_index.map { |month, index| [month, index + 1] }, (params[:q] && params[:q][:date_month_eq]) || Time.zone.now.month) %>
  <%= select_tag 'q[date_year_eq]', options_for_select((Time.zone.now.year - 2..Time.zone.now.year + 2).to_a, (params[:q] && params[:q][:date_year_eq]) || Time.zone.now.year) %>
  <%= submit_tag 'Filter' %>
<% end %>
